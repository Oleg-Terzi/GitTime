@using GitTime.Web.Models.Database
@using GitTime.Web.Models.View

@model FindModel

@{
    var _operation = (string)ViewBag.Operation;

    var _dataSource = (ICollection<TimecardFinderRow>)ViewBag.DataSource;
    var _sumHours = (decimal?)ViewBag.SumHours ?? 0;

    var _startRow = (int?)ViewBag.StartRow ?? 0;
    var _endRow = (int?)ViewBag.EndRow ?? 0;
    var _rowCount = (int?)ViewBag.RowCount ?? 0;
        
    var _pageCount = (int?)ViewBag.PageCount ?? 0;
    var _visiblePageCount = (int?)ViewBag.VisiblePageCount ?? 0;
    var _startPage = _visiblePageCount * (Model.SearchResults.PageIndex / _visiblePageCount);
}

@if (!string.IsNullOrEmpty(_operation))
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @switch (_operation)
        {
            case "Added":
                @("New timecard successfully created.")
                break;
            case "Edited":
            @("Timecard successfully updated.")
                break;
            case "Deleted":
            @("Timecard successfully deleted.")
                break;
        }
    </div>
}

<p>
    <button id="NewTimecardButton" type="button" class="btn btn-primary" data-toggle="modal" data-target="#Editor" onclick="_editor.showCreator();">
        New Timecard
    </button>

    <div id="EditorPlaceholder"></div>
</p>

@Html.HiddenFor(x => x.SearchResults.PageIndex)
@Html.HiddenFor(x => x.SearchResults.Filter)

@if (_dataSource.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Date</th>
                <th>Person</th>
                <th>Repo</th>
                <th>Company</th>
                <th>Description</th>
                <th class="number">Hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TimecardFinderRow row in _dataSource)
            {
                <tr>
                    <td class="commands">
                        <a href="javascript:_editor.showEditor(@row.TimecardID);" title="Edit">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="javascript:_editor.delete(@row.TimecardID);" title="Delete">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td class="date">@string.Format("{0:MMM d, yyyy}", row.EntryDate)</td>
                    <td>@row.PersonName</td>
                    <td>@row.Repository</td>
                    <td>@row.CompanyName</td>
                    <td>@row.IssueDescription</td>
                    <td class="number">@string.Format("{0:n2}", row.Hours)</td>
                </tr>
            }

            <tr>
                <td colspan="7" class="number summary">@string.Format("{0:n2}", _sumHours)</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6">

            @if (_pageCount > 1)
            {
                <nav>
                    <ul class="pagination">
                        @if (Model.SearchResults.PageIndex == 0)
                        {
                            <li class="disabled">
                                <a href="#" aria-label="Previous" title="Previous" onclick="return false;">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="#" aria-label="Previous" title="Previous" onclick="_editor.changePage(@(Model.SearchResults.PageIndex - 1)); return false;">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }

                        @if (_startPage > 0)
                        {
                            <li><a href="#" title="Previous Pages" onclick="_editor.changePage(@(_startPage - 1)); return false;">...</a></li>
                        }

                        @for (int i = _startPage; i < _pageCount && i < _startPage + _visiblePageCount; i++)
                        {
                            <li class="@(i == Model.SearchResults.PageIndex ? "active" : "")"><a href="#" onclick="_editor.changePage(@i); return false;">@(i + 1)</a></li>
                        }

                        @if (_startPage + _visiblePageCount < _pageCount)
                        {
                            <li><a href="#" title="Next Pages" onclick="_editor.changePage(@(_startPage + _visiblePageCount)); return false;">...</a></li>
                        }

                        @if (Model.SearchResults.PageIndex == _pageCount - 1)
                        {
                            <li class="disabled">
                                <a href="#" aria-label="Next" title="Next" onclick="return false;">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="#" aria-label="Next" title="Next" onclick="_editor.changePage(@(Model.SearchResults.PageIndex + 1)); return false;">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
        <div class="col-md-6 page-number">
            Timecards @_startRow - @_endRow of @_rowCount
        </div>
    </div>
}
else
{
    <strong>There are currently no timecards.</strong>
}